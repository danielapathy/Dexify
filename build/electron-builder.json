{
  "appId": "com.dexify.app",
  "productName": "Dexify",
  "directories": {
    "output": "build/artifacts"
  },
  "files": [
    "**/*",
    "!build/**/*",
    "!dist/**/*",
    "!tests/**/*",
    "!docs/**/*",
    "!.session/**/*",
    "!.backup*",
    "!**/*.md",
    "!.git/**/*",
    "!.github/**/*",
    "!.DS_Store",
    "!.old/**/*",
    "!.windsurf/**/*"
  ],
  "publish": {
    "provider": "github",
    "owner": "danielapathy",
    "repo": "Dexify"
  },
  "mac": {
    "category": "public.app-category.music",
    "icon": "icon.png",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "icon": "icon.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "icon": "icon.png",
    "category": "Audio",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ]
  }
}

