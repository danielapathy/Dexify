{
  "name": "dexify",
  "productName": "Dexify",
  "private": true,
  "version": "1.1.3",
  "description": "A Spotify-style desktop music client using Deezer and Deemix",
  "author": { "name": "Daniel Apathy", "email": "danielapathy@users.noreply.github.com" },
  "main": "main.js",
  "scripts": {
    "build:vendor:deezer-sdk": "tsup deemix-main/packages/deezer-sdk/src/index.ts --format esm --platform node --out-dir deemix-main/packages/deezer-sdk/dist --clean --tsconfig tsconfig.vendor.json && node -e \"require('fs').writeFileSync('deemix-main/packages/deezer-sdk/dist/index.js','export * from \\\"./index.mjs\\\";\\n')\"",
    "build:vendor:deemix-lite": "tsup vendor/deemix-lite-entry.ts --format esm --platform node --out-dir vendor/dist --clean --tsconfig tsconfig.vendor.json",
    "build:vendor": "npm run build:vendor:deezer-sdk && npm run build:vendor:deemix-lite",
    "start": "npm run build:vendor && env -u ELECTRON_RUN_AS_NODE electron .",
    "start:web": "python3 -m http.server 5173",
    "build:mac": "npm run build:vendor && electron-builder --mac",
    "build:win": "npm run build:vendor && electron-builder --win",
    "build:linux": "npm run build:vendor && electron-builder --linux",
    "build:all": "npm run build:vendor && electron-builder --mac --win --linux",
    "test": "node --test tests/*.test.js"
  },
  "dependencies": {
    "async": "^3.2.6",
    "browser-id3-writer": "^6.3.0",
    "deezer-sdk": "file:deemix-main/packages/deezer-sdk",
    "got": "^14.4.2",
    "html-entities": "^2.6.0",
    "metaflac-js2": "^1.0.8",
    "nanostores": "^0.11.3",
    "remixicon": "^4.8.0",
    "tough-cookie": "^4.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^25.1.8",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.dexify.app",
    "productName": "Dexify",
    "directories": {
      "output": "build/artifacts"
    },
    "files": [
      "**/*",
      "!build/**/*",
      "!dist/**/*",
      "!tests/**/*",
      "!docs/**/*",
      "!.session/**/*",
      "!.backup*",
      "!**/*.md",
      "!.git/**/*",
      "!.github/**/*",
      "!.DS_Store",
      "!.old/**/*",
      "!.windsurf/**/*"
    ],
    "publish": null,
    "mac": {
      "category": "public.app-category.music",
      "icon": "icon.png",
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] },
        { "target": "zip", "arch": ["x64", "arm64"] }
      ],
      "electronUpdaterCompatibility": ">= 2.16"
    },
    "win": {
      "icon": "icon.png",
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Dexify-Setup-${version}.${ext}"
    },
    "linux": {
      "icon": "icon.png",
      "category": "Audio",
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ]
    }
  }
}
